<main class="container mx-auto p-4 m-4 flex flex-col justify-center items-center max-w-xl">
  <div class="flex items-center flex-col">
    <h2 class="font-bold text-2xl">Sign up</h2>
    <p class="text-gray-700 mt-1">Register an account</p>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "flex flex-col p-4 w-full flex-1" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field mb-8 flex flex-col">
      <%= f.label :name, class: "font-medium" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "John Doe", class: "w-full p-2 rounded border-blue-200 border-2 mt-1 outline-none" %>
    </div>

    <div class="field mb-8 flex flex-col">
      <%= f.label :email, class: "font-medium" %>
      <%= f.email_field :email, autocomplete: "email", placeholder: "johndoe@example.com", class: "w-full p-2 rounded border-blue-200 border-2 mt-1 outline-none" %>
    </div>

    <div class="field mb-8 flex flex-col">
      <div class="flex items-center">
        <%= f.label :password, class: "font-medium" %>
        <% if @minimum_password_length %>
          <em class="ml-2 text-xs">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full p-2 rounded border-blue-200 border-2 mt-1 outline-none" %>
    </div>

    <div class="field mb-8 flex flex-col">
      <%= f.label :password_confirmation, class: "font-medium" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full p-2 rounded border-blue-200 border-2 mt-1 outline-none" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "w-full text-sm bg-indigo-400 py-4 rounded-lg text-white focus:bg-indigo-500 outline-none" %>
    </div>
  <% end %>

  <div class="text-sm text-gray-700">
    Already have an account? <%= link_to "Log in", new_session_path(resource_name), class: "text-blue-600 font-semibold" %>
  </div>

</main>