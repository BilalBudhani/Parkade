<main class="container mx-auto p-4 m-4 flex flex-col justify-center items-center max-w-xl">
  <div class="flex items-center flex-col">
    <h2 class="font-bold text-2xl">Log in</h2>
    <p class="text-gray-700 mt-1">Login to your account</p>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "flex flex-col p-4 w-full flex-1" }) do |f| %>
    <div class="field mb-8 flex flex-col">
      <%= f.label :email, class: "font-medium" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "johndoe@example.com", class: "w-full p-2 rounded border-blue-200 border-2 mt-1 outline-none" %>
    </div>

    <div class="field mb-4 flex flex-col">
      <div class="flex justify-between items-center">
        <%= f.label :password, class: "font-medium" %>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "forgot password?", new_password_path(resource_name), class: "text-xs" %>
        <% end %>
      </div>
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full p-2 rounded border-blue-200 border-2 mt-1 outline-none" %>
    </div>

    <div class="actions w-full">
      <%= f.submit "Login", class: "w-full text-sm bg-indigo-400 py-4 rounded-lg text-white focus:bg-indigo-500 outline-none" %>
    </div>
  <% end %>

  <%- if devise_mapping.registerable? %>
    <div class="text-sm text-gray-700">
      Don't have an account yet? <%= link_to "Sign up", new_registration_path(resource_name), class: "text-blue-600 font-semibold" %>
    </div>
  <% end %>


</main>